#!/bin/bash

set -e

echo -n "Project line count : "
cat `find ./ -path ./libgdl -prune -o -path ./_Ressources -prune -o -type f ! -name "pugi*" -iname "*.cpp" -o ! -name "pugi*" -iname "*.h*"` 2> /dev/null | wc -l

echo ""

export LD_LIBRARY_PATH=libgdl/libs

make

echo "";

if [ $# = 0 ]; then

	#valgrind ./bomberman
	./bomberman

elif [ $1 = "--gui" ]; then

	#valgrind ./bomberman --gui
	./bomberman --gui

fi

set +e
